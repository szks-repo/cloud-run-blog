{{define "layout"}}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{block "title" .}}Cloud Run Blog{{end}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      :root { color-scheme: light; }
      body { font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif; margin: 2rem auto; max-width: 760px; line-height: 1.6; padding: 0 1rem; background: #f9fafb; color: #111827; }
      header, footer { text-align: center; margin-bottom: 2rem; }
      h1 { margin-bottom: 0.5rem; }
      nav { display: flex; justify-content: center; gap: 0.75rem; }
      a { color: #2563eb; text-decoration: none; }
      a:hover { text-decoration: underline; }
      article { background: #ffffff; border-radius: 0.75rem; padding: 1.5rem; box-shadow: 0 1px 2px rgba(15, 23, 42, 0.08); margin-bottom: 1.5rem; }
      article h2 { margin-top: 0; margin-bottom: 0.5rem; }
      time { display: block; font-size: 0.875rem; color: #6b7280; margin-bottom: 0.75rem; }
      p { margin-top: 0; }
      .empty-state { text-align: center; padding: 2rem; color: #6b7280; border: 2px dashed #cbd5f5; border-radius: 0.75rem; background: #f1f5f9; }
      .actions { display: flex; flex-wrap: wrap; gap: 0.5rem; margin-top: 1rem; }
      .actions form { display: inline; }
      .btn { display: inline-block; background: #2563eb; color: #ffffff; font-weight: 600; padding: 0.5rem 1rem; border-radius: 0.5rem; }
      .btn.button-secondary { background: #e5e7eb; color: #111827; }
      .btn:hover { opacity: 0.95; }
      button { font: inherit; font-weight: 600; background: #2563eb; color: #ffffff; border: none; padding: 0.5rem 1rem; border-radius: 0.5rem; cursor: pointer; }
      button.button-secondary { background: #e5e7eb; color: #111827; }
      button.button-danger { background: #dc2626; }
      input[type="text"], textarea { width: 100%; padding: 0.75rem; border-radius: 0.5rem; border: 1px solid #cbd5f5; background: #ffffff; font: inherit; color: inherit; }
      textarea { min-height: 12rem; resize: vertical; }
      label { display: block; font-weight: 600; margin-top: 1rem; margin-bottom: 0.25rem; }
      form { margin: 0; }
      .form-actions { display: flex; gap: 0.75rem; align-items: center; margin-top: 1.5rem; }
      .error { background: #fee2e2; color: #991b1b; padding: 0.75rem 1rem; border-radius: 0.5rem; margin-bottom: 1rem; }
      section { background: #ffffff; border-radius: 0.75rem; padding: 1.5rem; box-shadow: 0 1px 2px rgba(15, 23, 42, 0.08); margin-bottom: 1.5rem; }
      @media (max-width: 640px) {
        body { margin: 1.5rem auto; padding: 0 0.75rem; }
        .form-actions { flex-direction: column; align-items: stretch; }
        button, .btn { width: 100%; text-align: center; }
      }
    </style>
  </head>
  <body>
    <header>
      <h1><a href="/">Cloud Run Blog</a></h1>
      <nav>
        <a href="/">Posts</a>
      </nav>
    </header>
    <main>
      {{block "content" .}}{{end}}
    </main>
    <footer>
      <small>Powered by Go on Cloud Run</small>
    </footer>
  </body>
</html>
{{end}}
